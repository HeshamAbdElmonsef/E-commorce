
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminNavBar.cshtml";

}

<h2 class="text-center text-capitalize my-3">Add new product </h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <form action="@Url.Action("Add","Product")" method="post" enctype="multipart/form-data">
                <input type="text" class="form-control mb-3" name="Name" placeholder="Product name" />
                <input type="number" class="form-control mb-3" name="Cost" placeholder="Product Cost" />
                <input type="number" class="form-control mb-3" name="Salary" placeholder="Product Salary" />
                <input type="number" class="form-control mb-3" name="TotleAmount" placeholder="Product Amount" />
                <input type="file" class="form-control mb-3" name="UploadedFile" required />
                <input type="text" class="form-control mb-3" name="ProviderName" placeholder="Provider Name" />
                <label for="cars">Choose a Category </label>

                <select name="Category_id" id="cars" class="form-control mb-3">
                    @foreach (var item in ViewBag.Category)
                    {
                        <option value="@item.ID">@item.Type</option>

                    }

                </select>
                <input type="submit" class="btn btn-primary mb-3" value="Add New Product" />
                <a href="@Url.Action("index","Product")" class="btn btn-secondary mb-3">  Cancel  </a>

            </form>
        </div>
    </div>
</div>



