
@model IEnumerable<ITIMVCProjectV1.Models.Order>
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_OurLayOut.cshtml";

}

@if (Model.Count() == 0)
{
    <h1 class="text-center text-capitalize my-3"> you have no orders  </h1>
}
else
{

    foreach (var item in Model)
    {
        <h1> <a href="@Url.Action("SubmitOrder","Customer",new {id = item.ID } )" class="btn btn-primary my-3"> Your Orders  </a> </h1>
    }


}