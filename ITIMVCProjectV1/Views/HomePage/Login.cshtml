
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_OurLayOut.cshtml";

}

<h2 class="text-center text-capitalize my-3">Login</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <form action="@Url.Action("Login","HomePage")" method="post">

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" name="UserName" class="form-control mb-3" id="exampleInputEmail1" aria-describedby="emailHelp" required>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" name="Password" class="form-control mb-3" id="exampleInputPassword1" required>
                </div>

                <button type="submit" class="btn btn-primary mb-3"> Log in </button>
                <a href="@Url.Action("Register","HomePage")" class="btn btn-success mb-3"> Create New Acount </a>

            </form>
        </div>
    </div>
</div>


